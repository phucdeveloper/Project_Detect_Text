<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.CameraActivity">

    <org.opencv.android.JavaCameraView
        android:id="@+id/java_camera_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:background="@android:drawable/screen_background_dark_transparent"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/imagebutton_close"
            android:layout_margin="10dp"
            android:background="@null"
            android:src="@drawable/ic_baseline_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <Spinner
            android:layout_margin="10dp"
            android:background="@drawable/custom_background_spinner"
            android:id="@+id/spinner_language"
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>

        <ImageButton
            android:layout_margin="10dp"
            android:background="@null"
            android:src="@drawable/ic_baseline_photo_library"
            android:id="@+id/imagebutton_save_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <ImageButton
        android:id="@+id/imagebutton_take_a_photo"
        android:scaleType="centerCrop"
        android:background="@null"
        android:src="@drawable/ic_baseline_camera"
        android:layout_marginBottom="30dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_width="80dp"
        android:layout_height="80dp"/>
</FrameLayout>